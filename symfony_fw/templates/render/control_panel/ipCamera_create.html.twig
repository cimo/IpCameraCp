        {{form_row(form.username, {'dense': "", 'styleType': "outlinedTrailing", 'icon': "textsms"})}}
        {{form_row(form.password, {'dense': "", 'styleType': "outlinedTrailing", 'icon': "textsms"})}}
        {{form_row(form.detectionSensitivity, {'dense': "", 'styleType': "outlinedTrailing", 'icon': "textsms"})}}
