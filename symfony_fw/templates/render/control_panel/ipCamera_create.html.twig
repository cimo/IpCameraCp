{% form_theme form "@templateRoot/layout/layout_form_materialDesign.html.twig" %}

<fieldset>
    <legend>{% trans %}ipCameraCreate_1{% endtrans %}</legend>
    <p>{% trans %}ipCameraCreate_2{% endtrans %}</p>
    <form id="form_cp_ipCamera_create" action="{{path("cp_ipCamera_create", {'_locale': urlLocale, 'urlCurrentPageId': urlCurrentPageId, 'urlExtra': urlExtra})}}" method="post" novalidate="novalidate">
        {{form_row(form.name, {'dense': "", 'styleType': "outlinedTrailing", 'icon': "textsms"})}}
